<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/mom_card_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/mom_uploader_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mom_dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile" />


                <LinearLayout
                    android:id="@+id/profile_view"
                    android:layout_width="251dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.04"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mom_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/sfpro_semibold"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/mom_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/sfpro_medium"
                        android:text="time"
                        android:textColor="@color/color2"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/delete_comment_view"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mom_item_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/mom_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mom_uploader_bar"
                android:background="#FFFFFF"
                android:elevation="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mom_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mom_uploader_bar"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:id="@+id/mom_text_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="@font/sfpro_regular"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mom_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mom_image_item"
                            android:layout_width="350dp"
                            android:layout_height="350dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/mom_likes_image"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            app:srcCompat="@drawable/ic_like" />

                        <TextView
                            android:id="@+id/mom_likes_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/sfpro_semibold"
                            android:text="0"
                            android:textColor="#888888"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/mom_comment_but"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_comments"
                            app:srcCompat="@drawable/ic_comments" />

                        <TextView
                            android:id="@+id/mom_comments_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/sfpro_semibold"
                            android:text="0"
                            android:textColor="#888888"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mom_card_out"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background">

    </LinearLayout>

</RelativeLayout>